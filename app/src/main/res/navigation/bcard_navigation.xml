<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bcard_navigation"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.chaplianski.bcard.core.ui.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.chaplianski.bcard.core.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_loginFragment_to_cardsFragment"
            app:destination="@id/cardsFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.chaplianski.bcard.core.ui.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_cardsFragment"
            app:destination="@id/cardsFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardsFragment"
        android:name="com.chaplianski.bcard.core.ui.CardsFragment"
        android:label="fragment_cards"
        tools:layout="@layout/fragment_cards" >
        <action
            android:id="@+id/action_cardsFragment_to_editCardFragment"
            app:destination="@id/editCardFragment" />
        <action
            android:id="@+id/action_cardsFragment_to_shareFragment"
            app:destination="@id/shareFragment" />
        <action
            android:id="@+id/action_cardsFragment_to_deleteCardFragment"
            app:destination="@id/deleteCardFragment" />
    </fragment>
    <fragment
        android:id="@+id/editCardFragment"
        android:name="com.chaplianski.bcard.core.ui.EditCardFragment"
        android:label="fragment_edit_card"
        tools:layout="@layout/fragment_edit_card" >
        <action
            android:id="@+id/action_editCardFragment_to_cardsFragment"
            app:destination="@id/cardsFragment" />
    </fragment>
    <fragment
        android:id="@+id/shareFragment"
        android:name="com.chaplianski.bcard.core.ui.ShareFragment"
        android:label="fragment_share"
        tools:layout="@layout/fragment_share" >
        <action
            android:id="@+id/action_shareFragment_to_QRFragment"
            app:destination="@id/QRFragment" />
        <action
            android:id="@+id/action_shareFragment_to_checkCardListFragment"
            app:destination="@id/checkCardListSaveFragment" />
        <action
            android:id="@+id/action_shareFragment_to_checkCardListLoadFragment"
            app:destination="@id/checkCardListLoadFragment" />
    </fragment>
    <dialog
        android:id="@+id/deleteCardFragment"
        android:name="com.chaplianski.bcard.core.ui.DeleteCardFragment"
        android:label="fragment_delete_card"
        tools:layout="@layout/fragment_delete_card" />
    <fragment
        android:id="@+id/QRFragment"
        android:name="com.chaplianski.bcard.core.ui.QRFragment"
        android:label="fragment_q_r"
        tools:layout="@layout/fragment_q_r" />
    <fragment
        android:id="@+id/checkCardListSaveFragment"
        android:name="com.chaplianski.bcard.core.ui.CheckCardListSaveFragment"
        android:label="fragment_check_card_list"
        tools:layout="@layout/fragment_check_card_list_save">
    <action
        android:id="@+id/action_checkCardListSaveFragment_to_shareFragment"
        app:destination="@id/shareFragment" />
    </fragment>
    <fragment
        android:id="@+id/checkCardListLoadFragment"
        android:name="com.chaplianski.bcard.core.ui.CheckCardListLoadFragment"
        android:label="fragment_check_card_list_load"
        tools:layout="@layout/fragment_check_card_list_load" >
        <action
            android:id="@+id/action_checkCardListLoadFragment_to_shareFragment"
            app:destination="@id/shareFragment" />
    </fragment>
</navigation>
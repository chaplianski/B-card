<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bcard" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
         <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Text styles -->
    <style name="Regular">
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Bold">
        <item name="android:fontFamily">@font/bold</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Medium">
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SemiBold">
        <item name="android:fontFamily">@font/semibold</item>
        <item name="fontFamily">@font/semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button style   -->
    <style name="BCard.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="BCard.OldButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
        <item name="background">@drawable/square_button</item>
    </style>

    <!-- Field style  -->
    <style name="BCard.OutlinedBox.Field" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/transparent</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxStrokeColor">@color/light_brown</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="colorOnSurface">@color/transparent</item>
        <item name="colorError">@color/accent_3</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="editTextStyle">@style/Regular</item>
    </style>


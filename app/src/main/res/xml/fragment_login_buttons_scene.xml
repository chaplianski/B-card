<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/click_forgot_password_button_start">
        <Constraint
            android:id="@+id/layout_login_fragment_sign_in"
            android:alpha="1" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/click_forgot_password_button_end">
        <Constraint
            android:id="@+id/layout_login_fragment_sign_in"
            android:alpha="0" />
    </ConstraintSet>
    <Transition
        android:id="@+id/click_forgot_password_button_forward"
        app:constraintSetEnd="@+id/click_forgot_password_button_end"
        app:constraintSetStart="@+id/click_forgot_password_button_start" />

</MotionScene>
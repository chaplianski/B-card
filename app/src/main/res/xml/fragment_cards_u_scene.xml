<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">


    <ConstraintSet android:id="@+id/sort_button_click_start">
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_name"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintVertical_bias="0.5" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_phone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintVertical_bias="0.5" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_mail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintVertical_bias="0.5" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_organisation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintVertical_bias="0.5" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintVertical_bias="0.5" />
        <Constraint
            app:layout_constraintVertical_bias="1.0"
            android:layout_height="53dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bt_search_button"
            app:layout_constraintBottom_toBottomOf="@+id/bt_search_button"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="53dp"
            android:id="@+id/bt_cards_fragment_sort"
            app:layout_constraintEnd_toStartOf="@+id/bt_search_button" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/sort_button_click_finish">
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_name"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.215"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_phone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.382"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_mail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.547"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_organisation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.711"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.881"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733" />
        <Constraint
            app:layout_constraintVertical_bias="0.858"
            android:layout_height="53dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.812"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="53dp"
            android:id="@+id/bt_cards_fragment_sort" />

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@+id/sort_button_click_finish"
        app:constraintSetStart="@+id/sort_button_click_start">

        <OnClick
            app:clickAction="toggle"
            app:targetId="@+id/bt_cards_fragment_sort" />
    </Transition>


</MotionScene>

<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/left_panel_click_start">
        <Constraint
            android:id="@+id/iv_fragment_cards_left_panel"
            android:layout_width="@dimen/layout_width_220dp"
            android:layout_height="@dimen/layout_height_155dp"
            android:layout_marginStart="@dimen/default_margin_minus_153dp"
            android:layout_marginBottom="@dimen/default_margin_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/left_panel_click_finish">
        <Constraint
            android:id="@+id/iv_fragment_cards_left_panel"
            android:layout_width="@dimen/layout_width_220dp"
            android:layout_height="@dimen/layout_height_155dp"
            android:layout_marginStart="@dimen/default_margin_minus_5dp"
            android:layout_marginBottom="@dimen/default_margin_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/right_panel_click_start">
        <Constraint
            android:id="@+id/iv_fragment_cards_right_panel"
            android:layout_width="@dimen/layout_width_220dp"
            android:layout_height="@dimen/layout_height_155dp"
            android:layout_marginEnd="@dimen/default_margin_minus_153dp"
            android:layout_marginBottom="@dimen/default_margin_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1"
            android:alpha="1" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/right_panel_click_finish">
        <Constraint
            android:id="@+id/iv_fragment_cards_right_panel"
            android:layout_width="@dimen/layout_width_220dp"
            android:layout_height="@dimen/layout_height_155dp"
            android:layout_marginEnd="@dimen/default_margin_minus_5dp"
            android:layout_marginBottom="@dimen/default_margin_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1"
            android:alpha="1" />
    </ConstraintSet>

    <Transition
        android:id="@+id/search_button_click_forward"
        app:constraintSetEnd="@+id/search_button_click_finish"
        app:constraintSetStart="@+id/search_button_click_start"
        app:autoTransition="none">
    </Transition>
    <Transition
        android:id="@+id/search_button_click_back"
        app:constraintSetEnd="@+id/search_button_click_start"
        app:constraintSetStart="@+id/search_button_click_finish"
        app:autoTransition="none">
    </Transition>
    <Transition
        android:id="@+id/left_panel_click_forward"
        app:constraintSetEnd="@+id/left_panel_click_finish"
        app:constraintSetStart="@+id/left_panel_click_start" />
    <Transition
        android:id="@+id/left_panel_click_back"
        app:constraintSetEnd="@+id/left_panel_click_start"
        app:constraintSetStart="@+id/left_panel_click_finish" />
    <Transition
        android:id="@+id/right_panel_click_forward"
        app:constraintSetEnd="@+id/right_panel_click_finish"
        app:constraintSetStart="@+id/right_panel_click_start" />
    <Transition
        android:id="@+id/right_panel_click_back"
        app:constraintSetEnd="@+id/right_panel_click_start"
        app:constraintSetStart="@+id/right_panel_click_finish" />
    <Transition
        android:id="@+id/sort_button_click_forward"
        app:constraintSetEnd="@+id/sort_button_click_finish"
        app:constraintSetStart="@+id/sort_button_click_start"
        app:autoTransition="none">
    </Transition>
    <Transition
        android:id="@+id/sort_button_click_back"
        app:constraintSetEnd="@+id/sort_button_click_start"
        app:constraintSetStart="@+id/sort_button_click_finish"
        app:autoTransition="none">
    </Transition>

    <ConstraintSet
        android:id="@+id/search_button_click_start"
        app:deriveConstraintsFrom="@+id/right_panel_click_finish"
        app:autoTransition="none">
        <Constraint
            android:id="@+id/tv_cards_fragment_search_field"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_20dp"
            android:layout_marginTop="@dimen/default_margin_minus_80dp"
            android:layout_marginEnd="@dimen/default_margin_16dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_cards_fragment_search_reset"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:id="@+id/rv_cards_fragment_cards"
            android:layout_width="@dimen/layout_width_409dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/default_margin_30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
        <Constraint
            android:id="@+id/bt_cards_fragment_search_reset"
            android:layout_width="@dimen/layout_width_40dp"
            android:layout_height="@dimen/layout_height_40dp"
            android:layout_marginTop="@dimen/default_margin_minus_80dp"
            android:layout_marginEnd="@dimen/default_margin_20dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/search_button_click_finish"
        app:deriveConstraintsFrom="@+id/right_panel_click_finish">
        <Constraint
            android:id="@+id/tv_cards_fragment_search_field"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_20dp"
            android:layout_marginTop="@dimen/default_margin_40dp"
            android:layout_marginEnd="@dimen/default_margin_16dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_cards_fragment_search_reset"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:id="@+id/rv_cards_fragment_cards"
            android:layout_width="@dimen/layout_width_409dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/default_margin_80dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
        <Constraint
            android:id="@+id/bt_cards_fragment_search_reset"
            android:layout_width="@dimen/layout_width_40dp"
            android:layout_height="@dimen/layout_height_40dp"
            android:layout_marginTop="@dimen/default_margin_40dp"
            android:layout_marginEnd="@dimen/default_margin_20dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/sort_button_click_start"
        app:deriveConstraintsFrom="@+id/right_panel_click_finish"
        app:autoTransition="none">
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_name"
            android:layout_width="@dimen/layout_width_60dp"
            android:layout_height="@dimen/layout_height_60dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintVertical_bias="0.5" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_phone"
            android:layout_width="@dimen/layout_width_60dp"
            android:layout_height="@dimen/layout_height_60dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintVertical_bias="0.5" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_mail"
            android:layout_width="@dimen/layout_width_60dp"
            android:layout_height="@dimen/layout_height_60dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintVertical_bias="0.5" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_organisation"
            android:layout_width="@dimen/layout_width_60dp"
            android:layout_height="@dimen/layout_height_60dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintVertical_bias="0.5" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_location"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
            app:layout_constraintVertical_bias="0.5" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/sort_button_click_finish"
        app:deriveConstraintsFrom="@+id/right_panel_click_finish"
        >
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_name"
            android:layout_width="@dimen/layout_width_60dp"
            android:layout_height="@dimen/layout_height_60dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_phone"
            android:layout_width="@dimen/layout_width_60dp"
            android:layout_height="@dimen/layout_height_60dp"
            android:layout_marginStart="@dimen/default_margin_8dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/bt_cards_fragment_sort_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_mail"
            android:layout_width="@dimen/layout_width_60dp"
            android:layout_height="@dimen/layout_height_60dp"
            android:layout_marginStart="@dimen/default_margin_8dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/bt_cards_fragment_sort_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_organisation"
            android:layout_width="@dimen/layout_width_60dp"
            android:layout_height="@dimen/layout_height_60dp"
            android:layout_marginStart="8dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/bt_cards_fragment_sort_mail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733" />
        <Constraint
            android:id="@+id/bt_cards_fragment_sort_location"
            android:layout_width="@dimen/layout_width_60dp"
            android:layout_height="@dimen/layout_height_60dp"
            android:layout_marginStart="8dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintStart_toEndOf="@+id/bt_cards_fragment_sort_organisation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/begin_position_start" >
        <Constraint
            android:id="@+id/iv_fragment_cards_right_panel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/layout_width_220dp"
            android:layout_height="@dimen/layout_height_155dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/default_margin_20dp"
            app:layout_constraintVertical_bias="1"
            android:layout_marginEnd="@dimen/default_margin_minus_153dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="0.98" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/begin_position_finish" >
        <Constraint
            android:id="@+id/iv_fragment_cards_right_panel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/layout_width_220dp"
            android:layout_height="@dimen/layout_height_155dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/default_margin_20dp"
            app:layout_constraintVertical_bias="1"
            android:layout_marginEnd="@dimen/default_margin_minus_153dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="1" />
    </ConstraintSet>
    <Transition
        app:constraintSetStart="@+id/begin_position_start"
        app:constraintSetEnd="@+id/begin_position_finish"
        app:autoTransition="jumpToEnd" />
</MotionScene>

<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/click_left_panel_start">
        <Constraint android:id="@+id/cl_login_fragment_left_left_panel"
            android:layout_width="@dimen/layout_width_295dp"
            android:layout_height="@dimen/layout_height_400dp"
            android:layout_marginStart="@dimen/default_margin_minus_265dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            android:alpha="1" />
        <Constraint
            android:id="@+id/iv_login_fragment_left_logo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/layout_width_280dp"
            android:layout_height="@dimen/layout_height_280dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="1" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/click_left_panel_end">
        <Constraint android:id="@id/cl_login_fragment_left_left_panel"
            android:layout_width="@dimen/layout_width_295dp"
            android:layout_height="@dimen/layout_height_400dp"
            android:layout_marginStart="@dimen/zero_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"/>
        <Constraint
            android:id="@+id/iv_login_fragment_left_logo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/layout_width_280dp"
            android:layout_height="@dimen/layout_height_280dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
    </ConstraintSet>

    <Transition
        android:id="@+id/click_left_panel_forward"
        app:constraintSetEnd="@+id/click_left_panel_end"
        app:constraintSetStart="@+id/click_left_panel_start" />
    <Transition
        android:id="@+id/click_left_panel_back"
        app:constraintSetEnd="@+id/click_left_panel_start"
        app:constraintSetStart="@+id/click_left_panel_end" />

</MotionScene>

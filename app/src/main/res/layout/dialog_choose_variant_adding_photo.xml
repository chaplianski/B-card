<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/frameLayout10"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
tools:context=".core.dialogs.ChooseVariantAddingPhotoDialog">

<androidx.cardview.widget.CardView
    android:id="@+id/cv_choose_variant_adding_photo_dialog_upcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_margin_30dp"
    android:backgroundTint="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0"
    app:cardCornerRadius="@dimen/card_radius_10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_image_for_two_button"
        android:background="@drawable/square_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_choose_variant_adding_photo_dialog_gallery"
            style="@style/Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_60dp"
            android:layout_gravity="top|center_horizontal"
            android:gravity="center"
            android:text="@string/select_photo_from_gallery"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_view_2dp"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/tv_choose_variant_adding_photo_dialog_camera"
            style="@style/Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_60dp"
            android:layout_gravity="center|center_horizontal"
            android:gravity="center"
            android:text="@string/capture_photo_from_camera"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height_60dp"
    android:layout_marginTop="@dimen/default_margin_16dp"
    android:layout_marginHorizontal="@dimen/default_margin_30dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cv_choose_variant_adding_photo_dialog_upcard"
    app:cardCornerRadius="@dimen/card_radius_10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_60dp"
        android:background="@drawable/square_background"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_choose_variant_adding_photo_dialog_cancel"
            style="@style/Regular"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
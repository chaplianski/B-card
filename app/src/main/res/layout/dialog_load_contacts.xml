<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/border"
    tools:context=".core.dialogs.LoadContactListDialog">

    <androidx.cardview.widget.CardView
        style="@style/dialog_style"
        app:cardCornerRadius="@dimen/card_radius_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/paper_07"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/checkBox_load_card_dialog_check_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_20dp"
                android:layout_marginTop="@dimen/default_margin_36dp"
                android:buttonTint="@color/light_brown"
                android:minWidth="@dimen/zero_dp"
                android:minHeight="@dimen/zero_dp"
                android:text="@string/check_all"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_view_2dp"
                android:layout_marginHorizontal="@dimen/default_margin_20dp"
                android:layout_marginTop="@dimen/default_margin_8dp"
                android:background="@color/light_brown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBox_load_card_dialog_check_all"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_load_card_dialog"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_dp"
                android:layout_margin="@dimen/default_margin_16dp"
                app:layout_constraintBottom_toTopOf="@+id/layout_load_card_dialog_buttons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBox_load_card_dialog_check_all"
                app:layout_constraintVertical_bias="0.5"
                tools:listitem="@layout/item_card_list_share_contact" />

            <LinearLayout
                android:id="@+id/layout_load_card_dialog_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/default_margin_20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.721"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_load_card_dialog_add"
                    style="@style/BCard.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/default_button_height_50dp"
                    android:layout_weight="1"
                    android:background="@drawable/square_button"
                    android:text="@string/add" />

                <View
                    android:layout_width="@dimen/default_view_10dp"
                    android:layout_height="@dimen/zero_dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_load_card_dialog_cancel"
                    style="@style/BCard.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/default_button_height_50dp"
                    android:layout_weight="1"
                    android:background="@drawable/square_button"
                    android:text="@string/cancel" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>


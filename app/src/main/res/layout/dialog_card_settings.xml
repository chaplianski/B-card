<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout12"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    tools:context=".core.dialogs.CardSettingsDialog">

    <androidx.cardview.widget.CardView
        style="@style/dialog_style"
        app:cardCornerRadius="@dimen/card_radius_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/paper_07"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_card_settings_dialog_title"
                    style="@style/Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/default_margin_24dp"
                    android:text="@string/card_settings"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_card_settings_dialog_color"
                            style="@style/Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/card_color"
                            android:textColor="@color/text_dark" />

                        <LinearLayout
                            android:id="@+id/radiogroup_card_settings_dialog_texture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/default_margin_10dp"
                            android:gravity="center_horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_card_settings_dialog_texture"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/default_margin_10dp"
                                    android:layout_marginTop="@dimen/default_margin_20dp"
                                    tools:listitem="@layout/item_card_texture">
                                </androidx.recyclerview.widget.RecyclerView>

                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/default_view_10dp"
                                android:layout_height="@dimen/zero_dp" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_card_settings_dialog_texture"
                                android:layout_width="@dimen/layout_width_160dp"
                                android:layout_height="@dimen/layout_height_240dp"
                                android:layout_marginVertical="@dimen/default_margin_16dp"
                                android:layout_marginEnd="@dimen/default_margin_16dp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="@dimen/layout_width_160dp"
                                    android:layout_height="@dimen/layout_height_240dp"
                                    android:layout_marginBottom="@dimen/default_margin_10dp">

                                    <ImageView
                                        android:id="@+id/iv_card_settings_dialog_texture"
                                        android:layout_width="@dimen/layout_width_160dp"
                                        android:layout_height="@dimen/layout_height_240dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.5"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintVertical_bias="0.5" />

                                    <ImageView
                                        android:id="@+id/iv_card_settings_dialog_avatar"
                                        android:layout_width="@dimen/zero_dp"
                                        android:layout_height="@dimen/zero_dp"
                                        android:src="@drawable/ic_portrait"
                                        app:layout_constraintDimensionRatio="W, 1:1"
                                        app:layout_constraintWidth_percent="0.35"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.5"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintVertical_bias="0.121" />

                                    <ImageView
                                        android:id="@+id/iv_card_settings_dialog_text_schema"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="@dimen/default_margin_20dp"
                                        android:layout_marginTop="@dimen/default_margin_20dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.484"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintVertical_bias="0.683"
                                        app:srcCompat="@drawable/ic_list" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>
                    </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_24dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_card_settings_dialog_corners"
                            style="@style/Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/default_margin_16dp"
                            android:text="@string/corners_round"
                            android:textColor="@color/text_dark" />

                        <RadioGroup
                            android:id="@+id/radiogroup_card_settings_dialog_corners_variant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="@dimen/default_margin_10dp"
                            android:layout_marginTop="@dimen/default_margin_16dp"
                            android:clickable="true"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/cb_card_settings_dialog_yes"
                                style="@style/Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="@color/light_brown"
                                android:text="@string/yes" />

                            <RadioButton
                                android:id="@+id/cb_card_settings_dialog_no"
                                style="@style/Regular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/default_margin_8dp"
                                android:layout_weight="1"
                                android:buttonTint="@color/light_brown"
                                android:text="@string/no" />
                        </RadioGroup>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_card_settings_dialog_form_photo"
                            style="@style/Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/default_margin_16dp"
                            android:text="@string/form_of_photo"
                            android:textColor="@color/text_dark" />

                        <RadioGroup
                            android:id="@+id/radiogroup_card_settings_dialog_form_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/default_margin_16dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/cb_card_settings_dialog_rectangle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                    android:buttonTint="@color/light_brown"
                                android:text="Rectangle" />

                            <RadioButton
                                android:id="@+id/cb_card_settings_dialog_oval"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_margin_8dp"
                                android:buttonTint="@color/light_brown"
                                android:text="Oval" />

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_card_settings_dialog_stroke_color"
                    style="@style/Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/default_margin_24dp"
                    android:text="@string/text_color"
                    android:textColor="@color/text_dark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/tv_card_settings_corners_size"
                    app:layout_constraintTop_toBottomOf="@+id/rg_card_settings_corners_variant"
                    app:layout_constraintVertical_bias="0.0" />

                <RadioGroup
                    android:id="@+id/rg_card_settings_dialog_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/default_margin_10dp"
                    android:layout_marginTop="@dimen/default_margin_10dp"
                    android:orientation="horizontal"
                    tools:listitem="@layout/text_color_item">

                    <RadioButton
                        android:id="@+id/rg_card_settings_dialog_text_color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/black" />

                    <RadioButton
                        android:id="@+id/rg_card_settings_dialog_text_color_purple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/purple_700" />

                    <RadioButton
                        android:id="@+id/rg_card_settings_dialog_text_color_violet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/violet" />

                    <RadioButton
                        android:id="@+id/rg_card_settings_dialog_text_color_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/red" />

                    <RadioButton
                        android:id="@+id/rg_card_settings_dialog_text_color_dark_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/dark_yellow" />

                    <RadioButton
                        android:id="@+id/rg_card_settings_dialog_text_color_light_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/light_yellow" />

                    <RadioButton
                        android:id="@+id/rg_card_settings_dialog_text_color_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/white" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_margin_20dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt_card_settings_dialog_save"
                        style="@style/Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/default_button_height_50dp"
                        android:layout_weight="1"
                        android:background="@drawable/square_button"
                        android:text="@string/save" />

                    <View
                        android:layout_width="@dimen/default_view_10dp"
                        android:layout_height="@dimen/zero_dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt_card_settings_dialog_cancel"
                        style="@style/Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/default_button_height_50dp"
                        android:layout_weight="1"
                        android:background="@drawable/square_button"
                        android:text="@string/cancel" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
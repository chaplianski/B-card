<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/frameLayout11"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:animateLayoutChanges="true"
android:background="@drawable/border"
tools:context=".core.dialogs.SaveCardDialog">

<androidx.cardview.widget.CardView
style="@style/dialog_style"
    app:cardCornerRadius="@dimen/card_radius_20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/paper_07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/checkBox_save_card_dialog_check_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_20dp"
            android:layout_marginTop="@dimen/default_margin_36dp"
            android:minWidth="@dimen/zero_dp"
            android:minHeight="@dimen/zero_dp"
            android:text="@string/check_all"
            android:buttonTint="@color/light_brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_view_2dp"
            android:background="@color/light_brown"
            android:layout_marginTop="@dimen/default_margin_8dp"
            android:layout_marginHorizontal="@dimen/default_margin_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_save_card_dialog_check_all"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_save_card_dialog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero_dp"
            android:layout_margin="@dimen/default_margin_16dp"
            app:layout_constraintBottom_toTopOf="@+id/cv_save_dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_save_card_dialog_check_all"
            app:layout_constraintVertical_bias="0.5"
            tools:listitem="@layout/item_card_list_share_contact" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_save_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/default_margin_30dp"
            android:layout_marginBottom="@dimen/default_margin_20dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1"
            app:cardCornerRadius="@dimen/card_radius_10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_image_for_three_button"
                android:background="@drawable/square_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/bt_save_card_dialog_vcf"
                    style="@style/Regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60dp"
                    android:layout_gravity="top|center_horizontal"
                    android:gravity="center"
                    android:text="@string/save_vcf"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_view_2dp"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/bt_save_card_dialog_csv"
                    style="@style/Regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60dp"
                    android:layout_gravity="center|center_horizontal"
                    android:gravity="center"
                    android:text="@string/save_csv_without_photo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_view_2dp"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/bt_save_card_dialog_cancel"
                    style="@style/Regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60dp"
                    android:layout_gravity="center|center_horizontal"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout11"
    android:layout_width="400dp"
    android:layout_height="630dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/border"
    tools:context=".core.dialogs.AdditionalInformationDialog">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/paper_07"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_additional_info_title"
                style="@style/Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Additional Information"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView5"
                style="@style/Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Personal additional information"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/et_user_additional_info_address"
                android:hint="Nickname, full postal address, timezone, links and ets."
                style="@style/EditTextAdditionalInformation" />

            <TextView
                android:id="@+id/textView9"
                style="@style/Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Education and Professional Skills"
                android:textColor="@color/black"
                 />

            <EditText
                android:id="@+id/et_user_additional_info_prof_skills"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Educational institution, courses, technology stack"
                style="@style/EditTextAdditionalInformation"
                 />

            <TextView
                android:id="@+id/textView11"
                style="@style/Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Private Information"
                android:textColor="@color/black"
                 />

            <EditText
                android:id="@+id/et_user_additional_info_private_info"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                style="@style/EditTextAdditionalInformation"
                 />

            <TextView
                android:id="@+id/textView12"
                style="@style/Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Reference"
                android:textColor="@color/black"
                 />

            <EditText
                android:id="@+id/edit_user_additional_info_reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                style="@style/EditTextAdditionalInformation"
                android:minHeight="48dp"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_additional_info_save"
                    style="@style/Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/square_button"
                    android:text="Save" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_additional_info_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    style="@style/Bold"
                    android:background="@drawable/square_button"
                    android:text="Cancel" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


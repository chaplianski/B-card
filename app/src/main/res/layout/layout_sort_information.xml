<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by"
        style="@style/SemiBold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />

    <com.google.android.material.chip.Chip
        android:id="@+id/bt_layout_sorting_adding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Adding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.chip.Chip
        android:id="@+id/bt_layout_sorting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/bt_layout_sorting_adding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/bt_layout_sorting_adding"
        app:layout_constraintTop_toTopOf="@+id/bt_layout_sorting_adding"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.chip.Chip
        android:id="@+id/bt_layout_sorting_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname"
        app:layout_constraintBottom_toBottomOf="@+id/bt_layout_sorting_name"
        app:layout_constraintStart_toEndOf="@+id/bt_layout_sorting_name"
        app:layout_constraintTop_toTopOf="@+id/bt_layout_sorting_name"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_layout_sorting_town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Town"
        app:layout_constraintBottom_toBottomOf="@+id/bt_layout_sorting_surname"
        app:layout_constraintStart_toEndOf="@+id/bt_layout_sorting_surname"
        app:layout_constraintTop_toTopOf="@+id/bt_layout_sorting_surname"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
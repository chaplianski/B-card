                    app:layout_constraintEnd_toStartOf="@+id/bt_cards_fragment_search"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toStartOf="@+id/iv_fragment_cards_right_panel"
                    app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_search"
                    app:layout_constraintVertical_bias="0.0"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/bt_cards_fragment_search"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:maxHeight="60dp"
                    android:src="@drawable/ic_search"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_fragment_cards_right_panel"
                    app:layout_constraintEnd_toEndOf="@+id/iv_fragment_cards_right_panel"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/iv_fragment_cards_right_panel"
                    app:layout_constraintTop_toTopOf="@+id/iv_fragment_cards_right_panel"
                    app:layout_constraintVertical_bias="0"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/bt_cards_fragment_settings"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_baseline_settings"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_fragment_cards_right_panel"
                    app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintHorizontal_bias="0.997"
                    app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintTop_toBottomOf="@+id/bt_cards_fragment_search"
                    app:layout_constraintVertical_bias="0.971"
                    app:maxImageSize="56dp"
                    app:tint="@color/black"
                    app:useCompatPadding="false" />

                <ImageButton
                    android:id="@+id/fab_cards_fragment_exit"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:src="@drawable/ic_baseline_exit_to_app"
                    app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_settings"
                    app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_search"
                    app:layout_constraintHorizontal_bias="0.849"
                    app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_search"
                    app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_settings"

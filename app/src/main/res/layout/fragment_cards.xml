                    app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_edit"
                    app:layout_constraintVertical_bias="0.0"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/fab_cards_fragment_share"

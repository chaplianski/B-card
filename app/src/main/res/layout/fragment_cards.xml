                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_cards_fragment_cards"
                    android:layout_width="409dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:background="@color/transparent"
                    android:clipToPadding="false"
                    android:paddingHorizontal="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/fragment_cards_card_item"
                    tools:orientation="horizontal" />

                <ImageButton
                    android:id="@+id/bt_cards_fragment_sort_phone"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:src="@drawable/ic_phone_call"
                    app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintVertical_bias="0.5"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/bt_cards_fragment_sort_mail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button"
                    android:clickable="true"

                    android:src="@drawable/ic_email_card"
                    app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintVertical_bias="0.5"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/bt_cards_fragment_sort_organisation"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button"
                    android:src="@drawable/ic_organization"
                    app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintVertical_bias="0.5"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/bt_cards_fragment_sort_location"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button"
                    android:src="@drawable/ic_location_card"
                    app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintVertical_bias="0.5"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/bt_cards_fragment_sort_name"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button"
                    android:src="@drawable/ic_black_user"
                    app:layout_constraintBottom_toBottomOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintEnd_toEndOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintTop_toTopOf="@+id/bt_cards_fragment_sort"
                    app:layout_constraintVertical_bias="0.5"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/bt_cards_fragment_search_voice"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-80dp"
                    android:layout_marginEnd="20dp"
                    android:alpha="0"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:src="@drawable/ic_voice"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:tint="@color/black" />

                <EditText
                    android:id="@+id/tv_cards_fragment_search_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-80dp"
                    android:layout_marginEnd="16dp"
                    android:alpha="0"
                    android:background="@drawable/search_field"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/bt_cards_fragment_search_voice"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"

                    />



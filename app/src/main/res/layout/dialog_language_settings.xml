<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout15"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/border"
    tools:context=".core.dialogs.LanguageSettingsDialog">

    <androidx.cardview.widget.CardView
        style="@style/dialog_style"
        app:cardCornerRadius="@dimen/card_radius_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/paper_07"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_language_settings_dialog"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_dp"
                android:layout_margin="@dimen/default_margin_30dp"
                app:layout_constraintBottom_toTopOf="@+id/layout_language_settings_dialog_buttons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1" />

            <LinearLayout
                android:id="@+id/layout_language_settings_dialog_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="@dimen/default_margin_20dp"
                android:layout_marginBottom="@dimen/default_margin_20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.721"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_language_settings_dialog_add"
                    style="@style/BCard.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/default_button_height_50dp"
                    android:layout_weight="1"
                    android:background="@drawable/square_button"
                    android:text="@string/setup" />

                <View
                    android:layout_width="@dimen/default_view_10dp"
                    android:layout_height="@dimen/zero_dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_language_settings_dialog_cancel"
                    style="@style/BCard.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/default_button_height_50dp"
                    android:layout_weight="1"
                    android:background="@drawable/square_button"
                    android:text="@string/cancel" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
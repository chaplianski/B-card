<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".core.dialogs.EditCardDialog">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_edit_card_dialog_upcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_30dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:cardCornerRadius="@dimen/card_radius_10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_image_for_three_button"
            android:background="@drawable/square_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_edit_card_dialog_person_info_plus"
                    style="@style/Regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60dp"
                    android:layout_marginStart="@dimen/default_margin_10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="6"
                    android:visibility="gone"
                    android:src="@drawable/ic_check_circle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />

                <TextView
                    android:id="@+id/tv_edit_card_dialog_person_info"
                    style="@style/Regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60dp"
                    android:layout_weight="1"
                    android:layout_gravity="top|center_horizontal"
                    android:gravity="center"
                    android:text="@string/person_information"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_view_2dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_edit_card_dialog_add_info_plus"
                    style="@style/Regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60dp"
                    android:layout_marginStart="@dimen/default_margin_10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="6"
                    android:visibility="gone"
                    android:src="@drawable/ic_check_circle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />

                <TextView
                    android:id="@+id/tv_edit_card_dialog_add_info"
                    style="@style/Regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60dp"
                    android:layout_weight="1"
                    android:layout_gravity="center|center_horizontal"
                    android:gravity="center"
                    android:text="@string/additional_information"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_view_2dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_edit_card_dialog_card_settings_plus"
                    style="@style/Regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60dp"
                    android:layout_marginStart="@dimen/default_margin_10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="6"
                    android:visibility="gone"
                    android:src="@drawable/ic_check_circle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />

                <TextView
                    android:id="@+id/tv_edit_card_dialog_settings"
                    style="@style/Regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom|center_horizontal"
                    android:gravity="center"
                    android:text="@string/card_settings"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_image_for_two_button"
        android:layout_marginTop="@dimen/default_margin_16dp"
        android:layout_marginHorizontal="@dimen/default_margin_30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_edit_card_dialog_upcard"
        app:cardCornerRadius="@dimen/card_radius_10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_image_for_two_button"
            android:background="@drawable/square_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_edit_card_dialog_save"
                style="@style/Regular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20sp"
                 />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_view_2dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_edit_card_dialog_cancel"
                style="@style/Regular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:layout_gravity="top|center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20sp"
                 />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>